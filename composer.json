{
    "name": "gerardtoko/imagine-bundle",
    "type": "symfony-bundle",
    "description": "This Bundle assists in imagine manipulation using the imagine library",
    "keywords": ["imagine", "image"],
    "homepage": "http://gerardtoko.com",
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "GT and other contributors",
            "homepage": "https://github.com/liip/GTImagineBundle/contributors"
        }
    ],

    "require": {
        "php":                      ">=5.3.2",
        "imagine/imagine":          "0.4.*",
        "symfony/finder":           ">=2.0.16,<2.3-dev",
        "symfony/filesystem":       ">=2.0.16,<2.3-dev",
        "symfony/framework-bundle": ">=2.0.16,<2.3-dev"
    },

    "require-dev": {
        "twig/twig":                ">=1.0,<2.0-dev",
        "symfony/yaml":             ">=2.0.16,<2.3-dev"
    },

    "suggest": {
        "twig/twig":                ">=1.0,<2.0-dev"
    },

    "autoload": {
        "psr-0": { "GT\\ImagineBundle": "" }
    },

    "target-dir": "GT/ImagineBundle"
}
